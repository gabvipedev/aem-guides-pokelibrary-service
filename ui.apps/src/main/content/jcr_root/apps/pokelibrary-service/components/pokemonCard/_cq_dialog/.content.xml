<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    extraClientlibs="[training.multi-field.dialog]"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title"
                        name="./title"/>
                    <rrss
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            fieldDescription="Click '+' to add a new state"
                            fieldLabel="RRSS items"
                            composite="{Boolean}true">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                max-item="3"
                                min-item="1"/>
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./rrss">
                            <items jcr:primaryType="nt:unstructured">
                                <label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="RRSS Label"
                                        fieldDescription="Enter the label for RRSS item"
                                        name="./label"
                                        required="{Boolean}true"/>

                                <path jcr:primaryType="nt:unstructured"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                      fieldLabel="RRSS Path"
                                      fieldDescription="Select the path"
                                      forceSelection="{Boolean}true"
                                      name="./rrssPath"
                                      rootPath="/content/training" />

                                <image
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Path of the image."
                                        fieldLabel="Path"
                                        name="./rrssImagePath"
                                        required="{Boolean}true"
                                        rootPath="/content/dam"/>
                            </items>
                        </field>
                    </rrss>
                </items>
            </column>
        </items>
    </content>
</jcr:root>